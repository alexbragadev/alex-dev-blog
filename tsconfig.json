{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true // Permite arquivos JS
  },
  "include": ["src/**/*.js"], // Apenas arquivos JS na pasta src
  "exclude": ["dist", "node_modules"]
}